<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.simonsays">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/simon_says"
        android:roundIcon="@mipmap/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".NameForRecordActivity"></activity>
        <activity android:name=".ScoreActivity" />
        <activity android:name=".GameOverActivity" />
        <activity android:name=".GameScreenActivity" />
        <activity android:name=".XylophoneActivity" />
        <activity android:name=".PianoActivity" />
        <activity android:name=".DrumActivity" />
        <activity android:name=".NormalActivity" />
        <activity android:name=".BoardFactory" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>