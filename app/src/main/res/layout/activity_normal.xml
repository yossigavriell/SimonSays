<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_simon"
    android:orientation="vertical"
    android:weightSum="5">

    <TextView

        android:id="@+id/text_view_simon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="10dp"
        android:shadowColor="@color/PurpleSimon"
        android:shadowRadius="15"
        android:text="@string/normal"
        android:textColor="@color/YellowSimon"
        android:textSize="50sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:padding="10dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/your_score_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@id/center_linear"
            android:layout_weight="1"
            android:text="@string/score_new"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/PurpleSimon"
            android:textSize="20sp" />

        <TextView

            android:id="@+id/score_player"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@id/center_linear"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/PurpleSimon"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/center_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_simon"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="1dp"
            android:weightSum="2">

            <Button
                android:id="@+id/green_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_selector_tourquise" />

            <Button
                android:id="@+id/yellow_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_selector_yellow" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="1dp"
            android:weightSum="2">


            <Button
                android:id="@+id/red_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_selector_pink" />

            <Button

                android:id="@+id/blue_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_selector_blue" />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/normal_player_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/text_view_simon"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textColor="@color/PurpleSimon"
        android:textSize="30sp" />

</LinearLayout>