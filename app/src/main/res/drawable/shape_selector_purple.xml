<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient

                android:startColor="@color/PurpleSimon"
                android:centerColor="@color/PurpleSimon"
                android:endColor="@color/PurpleSimon"
                android:angle="270"/>

            <stroke
                android:width="2dp"
                android:dashWidth="2dp"
                android:color="@color/PurpleSimon"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient

                android:startColor="@color/PurpleSimon"
                android:endColor="@color/White"
                android:angle="270"/>

            <stroke
                android:dashWidth="2dp"
                android:width="2dp"
                android:color="@color/PurpleSimon"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>


</selector>